@model FilmsLib.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="flex-column justify-content-center align-content-center">
    <h1 class="text-center display-4 mt-2">
        <i class="fas fa-film"></i>
    </h1>
    <div class="row justify-content-center align-content-center">
        <form method="post" asp-controller="Account" asp-action="Register" class="auth-form">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email"></label><br />
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nickname"></label><br />
                <input class="form-control" asp-for="Nickname" />
                <span asp-validation-for="Nickname"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label><br />
                <input class="form-control" asp-for="Age" />
                <span asp-validation-for="Age"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label><br />
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm"></label><br />
                <input class="form-control" asp-for="PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div class="auth-btn">
                <button type="submit" class="btn btn-dark mt-4 btn-block">
                    Створити акаунт
                </button>
            </div>
            <div class="row justify-content-center mt-2">
                <a asp-area="" asp-controller="Account" asp-action="Login">Вже маєте акаунт?</a>
            </div>
        </form>
    </div>
</div>
