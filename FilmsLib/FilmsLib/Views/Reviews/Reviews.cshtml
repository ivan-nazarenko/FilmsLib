@model IEnumerable<Review>

@{
    ViewData["Title"] = "Відгуки";
}

<div class="row justify-content-between align-content-start mb-3">
    <h2 class="text-dark mr-auto">Останні відгуки:</h2>
</div>
<div class="row flex-column">
    @foreach (var item in Model)
    {
        <div class="d-flex mb-2 p-3 justify-content-between border-dark shadow-sm">
            <div class="d-flex align-content-start">
                <img class="mr-2 review-avatar align-self-start" src="https://eu.ui-avatars.com/api/?name=@item.Reviewer.Nickname&size=64" />
                <div class="d-flex flex-column">
                    <span class="font-weight-bold mr-1">@item.Reviewer.Nickname</span>
                    <h5>
                        @item.Heading&nbsp;
                        <a asp-controller="Film" asp-action="Details" asp-route-id="@item.Film.Id">
                            (@item.Film.Name)
                        </a>
                    </h5>
                    <p>@item.Text</p>
                </div>
            </div>
            <div class="d-flex flex-column">
                <span class="text-muted">@item.PublicatonDate</span>
                <h5>@item.Mark/10</h5>
            </div>
        </div>
    }
</div>

